{
  "name": "@justaos/odm",
  "version": "3.1.0",
  "private": false,
  "description": "JUST A OS's ODM (Object Document Mapper) is built for NodeJS and provides transparent persistence for JavaScript objects to MongoDB database",
  "keywords": [
    "justaos",
    "justaos odm",
    "mongodb wrapper",
    "object document mapper"
  ],
  "homepage": "https://justaos.com",
  "bugs": {
    "url": "https://github.com/justaos/odm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justaos/odm.git"
  },
  "author": "Shivaji Varma Pusapati Venkata <contact@shivajivarma.com> (https://shivajivarma.com)",
  "license": "Apache-2.0",
  "contributors": [],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "ts-node ./clean.ts | tsc",
    "lint": "eslint ./src --ext .ts,.tsx",
    "lint:fix": "eslint --fix ./src --ext .ts,.tsx",
    "test": "nyc mocha test/init.test.ts test/unit/**/*test.ts test/end.test.ts",
    "posttest": "nyc report --reporter=json",
    "codecov": "nyc report --reporter=json | codecov",
    "release": "npm publish"
  },
  "nyc": {
    "all": true,
    "check-coverage": false,
    "exclude": [
      "**/**.interface.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "report-dir": "docs/reports/coverage",
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@justaos/utils": "^1.0.2",
    "mongodb": "^4.4.1"
  },
  "devDependencies": {
    "@justaos/dev-dependencies": "^1.0.3",
    "codecov": "^3.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
