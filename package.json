{
  "name": "@p4rm/odm",
  "version": "2.4.3",
  "private": false,
  "description": "P4RM's ODM (Object Document Mapper) is built for NodeJS and provides transparent persistence for JavaScript objects to MongoDB database",
  "keywords": [
    "p4rm",
    "p4rm odm",
    "mongodb wrapper",
    "object document mapper"
  ],
  "homepage": "https://p4rm.com",
  "bugs": {
    "url": "https://github.com/p4rm/odm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p4rm/odm.git"
  },
  "license": "Apache-2.0",
  "author": "Shivaji Varma <contact@shivajivarma.com>",
  "contributors": [],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "node ./clean.js | tsc",
    "lint": "eslint ./src --ext .ts,.tsx",
    "lint:fix": "eslint --fix ./src --ext .ts,.tsx",
    "lint:quiet": "eslint ./src --quiet --ext .ts,.tsx",
    "test": "nyc mocha test/init.test.ts test/unit/**/*test.ts test/end.test.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "npm publish",
    "generate-docs": "embedme --stdout --strip-embed-comment README.template.md > README.md"
  },
  "nyc": {
    "all": true,
    "check-coverage": false,
    "exclude": [
      "**/**.interface.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "report-dir": "docs/reports/coverage",
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@p4rm/common-utils": "^1.4.2",
    "@p4rm/file-utils": "^1.4.2",
    "@p4rm/logger-utils": "^1.4.0",
    "mongodb": "4.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "embedme": "^1.22.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.4.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
